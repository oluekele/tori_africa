{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/libraries/Biographies.tsx", "components/libraries/biographies/index.jsx", "components/libraries/biographies/Biographies.jsx", "components/libraries/books/index.jsx", "components/libraries/books/Books.jsx", "components/libraries/fiction/index.jsx", "components/libraries/fiction/Fiction.jsx"],
  "exclude": ["node_modules"]
}
